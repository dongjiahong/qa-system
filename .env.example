# Knowledge QA System Environment Configuration
# Copy this file to .env and modify as needed

# Application settings
KNOWLEDGE_QA_DEBUG=false
KNOWLEDGE_QA_LOG_LEVEL=INFO

# Database settings
KNOWLEDGE_QA_DB_PATH=data/qa_history.db

# ChromaDB settings
KNOWLEDGE_QA_CHROMA_PERSIST_DIRECTORY=data/chroma_db

# Ollama settings
KNOWLEDGE_QA_OLLAMA_BASE_URL=http://localhost:11434
KNOWLEDGE_QA_OLLAMA_MODEL=qwen3:1.7b
KNOWLEDGE_QA_OLLAMA_TIMEOUT=60

# Embedding model
KNOWLEDGE_QA_EMBEDDING_MODEL=shaw/dmeta-embedding-zh-small-q4

# File processing settings
KNOWLEDGE_QA_MAX_FILE_SIZE_MB=100

# Model settings
KNOWLEDGE_QA_QUESTION_GENERATION_TEMPERATURE=0.7
KNOWLEDGE_QA_EVALUATION_TEMPERATURE=0.3
KNOWLEDGE_QA_MAX_CONTEXT_LENGTH=4000